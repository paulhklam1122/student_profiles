<div class="container">
  <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, "", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: 'form-control' %>
    </div>
    <div>
    <%= link_to "Forgot Your Password?", new_password_reset_path %>
    </div>
    <hr>
    <div class="form-group">
      <%= submit_tag "Sign In", class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
